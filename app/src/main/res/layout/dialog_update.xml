<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/iv_dialog_update_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="60dp"
            android:src="@mipmap/icon_update_close"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_dialog_update_dos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gjb_background_gray"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/gjb_text_gray"/>

    <Button
        android:id="@+id/btn_dialog_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:text="立即升级"
        android:textColor="@color/white"
        android:textSize="20dp"/>

</LinearLayout>